#!/bin/bash 

if [ 1 -ne $# ]
then 
  echo "USAGE: $0 path/to/SRA/ZRLMPI/folder"
else 
  echo "cd $1; make"
  cd $1; make 
  /bin/echo -e "\n>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
  /bin/echo -e "\t\tZRLMPI SW binary is ready in $1"
  /bin/echo -e "<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<\n"
fi 
